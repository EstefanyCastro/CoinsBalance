<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/morado"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ActividadTransaccion">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purpura"
        app:logo="@drawable/logo_libro"
        app:title="  Nueva Transacción"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/nombreLibroTitulo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/cuerpo_libro"
        android:gravity="center"
        android:text="Nombre del Libro"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fechaTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Fecha"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/calendarioBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purpura"
            android:text="Calendario"
            app:cornerRadius="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tipoTransaccionTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="Tipo"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/toggleBotonIngreso"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cuerpo_libro"
            android:checked="true"
            android:textColor="@color/white"
            android:textOff="Ingreso"
            android:textOn="Ingreso"
            app:cornerRadius="10dp" />

        <ToggleButton
            android:id="@+id/toggleBotonEgreso"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@drawable/cuerpo_libro"
            android:checked="false"
            android:textColor="@color/white"
            android:textOff="Egreso"
            android:textOn="Egreso" />

    </LinearLayout>

    <TextView
        android:id="@+id/valorTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="140dp"
        android:text="Valor"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/valorEntrada"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cuerpo_libro_entrada"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/descripcionTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginRight="110dp"
        android:text="Descripción"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/descripcionEntrada"
        android:layout_width="360dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cuerpo_libro_entrada"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancelarBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/purpura"
            android:text="Cancelar" />

        <Button
            android:id="@+id/prestamoBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/purpura"
            android:text="Préstamo" />

        <Button
            android:id="@+id/anadirBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purpura"
            android:text="Añadir" />
    </LinearLayout>

</LinearLayout>